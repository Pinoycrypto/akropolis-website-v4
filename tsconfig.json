{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./@types"],
    "traceResolution": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",                          /* Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017', 'ES2018', 'ES2019' or 'ESNEXT'. */                      /* Specify module code generation: 'none', 'commonjs', 'amd', 'system', 'umd', 'es2015', or 'ESNext'. */
    "lib": ["dom", "es2020", "scripthost"],   /* Specify library files to be included in the compilation. */
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "data/*": ["data/*"],
      "*": ["src/*"]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": false,
    "strictBindCallApply": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "preserveSymlinks": true
  },
  "include": [
    "src/**/*",
    "webpack/**/*",
    "server/**/*",
    "@types/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": false
  }
}
